<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.danilakondratenko.incubatorcontrol">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IncubatorControl"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".IncubatorVideoArchiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IncubatorVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ArchiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IncubatorSettingsActivity"
            android:label="@string/title_activity_incubator_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IncubatorStateActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>